doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        style  
            include style.css 
    body
        header
            h1 PRJ-ASR 
        main
            div#welcome
                form 
                    input(placeholder = "room name", required, type = "text")
                    button Enter room
                div#call
                    div#myStream
                        video#myFace(autoplay,playsinline, width="300", height="300")
                        button#mute Mute
                        button#camera Turn Camera Off
                        select#cameras
                            option(value = "device") Camera Option
                        video#peerFace(autoplay,playsinline, width="300", height="300")
            script(src="/socket.io/socket.io.js")
            script(src="/public/js/app.js") 