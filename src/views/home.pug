doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        style  
            include style.css 
    body
        header
            h1#title PRJ-ASR 
        main
            div#welcome
                form 
                    input(placeholder = "room name", required, type = "text")
                    button Enter room
            div#call
                div#myStream
                    video#myFace(autoplay,playsinline, width="300", height="300")
                    button#mute Mute
                    button#camera Turn Camera Off
                    select#cameras
                        option(value = "device") Camera Option
                    video#peerFace(autoplay,playsinline, width="300", height="300")
            div#blank
            section
            div
                input(type="radio" id="ns" name="select" value="ns" onClick="reply_click(this.id)")
                label(for="ns")
                    h2 Native 
            div
                input(type="radio" id="nns" name="select" value="nns" onClick="reply_click(this.id)")
                label(for="nns")
                    h2 Non-native 
            div.button-box
                button Open Map 
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js") 
